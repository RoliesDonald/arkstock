{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler", // Atau "node" jika Anda menggunakan Next.js versi lama
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".", // PASTIKAN ADA INI! Ini adalah root untuk path alias
    "paths": {
      // Alias untuk src/components, src/lib, src/utils, src/app
      "@/*": ["./src/*"], // Ini adalah alias utama untuk src
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/app/*": ["./src/app/*"],

      // Alias untuk Prisma Client
      // Ini sangat penting agar Webpack menemukan Prisma Client yang digenerate
      "@/generated/prisma": ["./node_modules/.prisma/client"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
