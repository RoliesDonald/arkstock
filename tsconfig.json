{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler", // Atau "node" jika Anda menggunakan Next.js versi lama
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".", // PASTIKAN INI ADA DAN DISETEL KE "."
    "paths": {
      // Alias untuk src/
      "@/*": ["./src/*"],

      // Alias spesifik (jika Anda menggunakannya)
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/app/*": ["./src/app/*"],
      "@/types/*": ["./src/types/*"],
      // Alias untuk Prisma Client (penting untuk IntelliSense Prisma)
      "@/generated/prisma": ["./node_modules/.prisma/client"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
