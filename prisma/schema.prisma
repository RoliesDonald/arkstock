  RENTAL
  CUSTOMER
  VENDOR
  INTERNAL
  FLEET_COMPANY
  SERVICE_MAINTENANCE
  RENTAL_COMPANY
  CAR_USER
  CHILD_COMPANY
  OTHER
  SUPPLIER
}

/// Enum untuk status perusahaan
enum CompanyStatus {
  ACTIVE
  INACTIVE
  PROSPECT
  SUSPENDED
  ON_HOLD
}

/// Enum untuk tipe kendaraan
enum VehicleType {
  PASSENGER
  COMMERCIAL
  MOTORCYCLE
}

// enum untuk kategori kendaraan
