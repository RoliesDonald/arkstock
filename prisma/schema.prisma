generator client {
  provider = "postgresql"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =================================================================
// ENUMS
// =================================================================
/// Enum untuk tipe perusahaan
